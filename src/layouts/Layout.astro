---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Convert YouTube videos to MP3" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="JeanStkng" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <div class="background-svg offset-0"></div>
    <div class="background-svg offset-1"></div>
    <div class="background-svg offset-2"></div>
    <div class="background-svg offset-3"></div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #053c2d;
    background-size: 224px;
  }
  body {
    overflow: hidden; /* Prevent horizontal scrollbar */
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .background-svg {
    width: 100%;
    height: 100vh; /* Set the height to the viewport height */
    background-image: url("../../assets/leaf.svg"); /* Replace with your SVG file path */
    background-repeat: repeat; /* Repeat the SVG as a background */
    background-size: contain; /* Scale the SVG to fit within the container without exceeding it */
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
  }

  .offset-0 {
    animation: fall 5s linear infinite; /* Animation definition */
  }

  .offset-1 {
    animation: fall-2 6s linear infinite; /* Animation definition */
  }

  .offset-2 {
    animation: fall-3 7s linear infinite; /* Animation definition */
  }

  .offset-3 {
    animation: fall-4 8s linear infinite; /* Animation definition */
  }

  @keyframes fall {
    0% {
      transform: translate(0, -300px); /* Start position */
    }
    100% {
      transform: translateX(200px) translateY(130vh); /* End position for row 1 (falling down with X-translation) */
    }
  }

  @keyframes fall-2 {
    0% {
      transform: translateY(-600px); /* Start position */
    }
    100% {
      transform: translateX(300px) translateY(130vh); /* End position (falling down) */
    }
  }

  @keyframes fall-3 {
    0% {
      transform: translateY(-900px); /* Start position */
    }
    100% {
      transform: translateX(-300px) translateY(130vh); /* End position (falling down) */
    }
  }

  @keyframes fall-4 {
    0% {
      transform: translateY(-1200px); /* Start position */
    }
    100% {
      transform: translateY(130vh); /* End position (falling down) */
    }
  }

  .loader {
    border: 16px solid #f3f3f3; /* Light grey */
    border-top: 16px solid #3498db; /* Blue */
    border-radius: 50%;
    width: 50px;
    height: 50px;
	display: inline-block;
    animation: spin 2s linear infinite;
	position: absolute;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
